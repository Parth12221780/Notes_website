<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script src="script.js"></script>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg border-bottom border-body" style="padding: 10px;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">EXAM NOTES</a>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav" style="margin-left: auto;">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/resources">Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                             <%= user.name %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item active" href="/profile">Profile</a></li>
                            <li><a class="dropdown-item" onclick="logout()" style="cursor:pointer;">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h2>Hello <%= user.name %></h2>
    <h3>Pending Contributions</h3> 
    <% pending_contributions.forEach(pending_contribution => { %>
        <div>
            <h4><%= pending_contribution.subject_code %></h4>
            <h4><%= pending_contribution.subject_name %></h4>
            <h4><%= pending_contribution.file_name %></h4>
            <h4><%= pending_contribution.description %></h4>
            <a href="/download_pendingfile/<%= pending_contribution._id %>" download="filename">Download File</a>
        </div>
    <% }) %>
    <h3>Approved Contributions</h3>
    <% approved_contributions.forEach(approved_contribution => { %>
        <div>
            <h4><%= approved_contribution.subject_code %></h4>
            <h4><%= approved_contribution.subject_name %></h4>
            <h4><%= approved_contribution.file_name %></h4>
            <h4><%= approved_contribution.description %></h4>
            <a href="/downloadfile/<%= approved_contribution._id %>" download="filename">Download File</a>
        </div>
    <% }) %>
    <h3>Rejected Contributions</h3>
    <% rejected_contributions.forEach(rejected_contribution => { %>
        <div>
            <h4><%= rejected_contribution.subject_code %></h4>
            <h4><%= rejected_contribution.subject_name %></h4>
            <h4><%= rejected_contribution.file_name %></h4>
            <h4><%= rejected_contribution.description %></h4>
            <h4><%= rejected_contribution.remarks %></h4>
        </div>
    <% }) %>
</body>
</html>